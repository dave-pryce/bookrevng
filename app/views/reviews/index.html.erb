<!-- Header -->
<div class='navbar navbar-inverse navbar-static-top'>
    <div class='container'>
        <a class='navbar-brand'> Angular Book Review App </a>
        <ul class='nav navbar-nav navbar-right'> 
          <li><a>About</a></li>
          <li><a>Contact</a></li>
        </ul>
  </div>
</div>


<!-- Main -->
<div class='container'>
  <div class='well'>
  <!-- Show Reviews from app.js -->
    <div ng-controller='JsController as jsCtrl'>
      <h2> Book Reviews - from app.js </h2> 

            <div class='col-md-12'>
      
              <table class='table table-striped table-bordered'>
                <thead>
                  <td> Star Rating </td>
                  <td> Book Title </td>
                  <td> Author </td>
                  <td> Review </td>
                </thead>

                <tbody ng-repeat="bookreview in jsCtrl.bookreviews">
                  <td>{{bookreview.starRating}} </td>
                  <td>{{bookreview.title}} </td>
                  <td>{{bookreview.author}} </td>
                  <td>{{bookreview.review}} </td>
                </tbody>
              </table>
            </div>
    </div>



<!-- Form -->

    <h2> Add a review - In front end </h2>


    <form ng-controller='ReviewController as reviewCtrl' ng-submit='reviewCtrl.addReview(book)'>

      <div class='row'> 

            <div class= 'col-md-2'>
              <select ng-model="reviewCtrl.book.starRating" ng-options="starRating for starRating in [5,4,3,2,1]" class='form-control'>
                <option value="">Rate the Book</option>
              </select>
            </div>

            <div class= 'col-md-2'>
              <input type="text" ng-model="reviewCtrl.book.title" class='form-control' placeholder="Book Title"></input>
            </div>

            <div class= 'col-md-2'>
              <input type="text" ng-model="reviewCtrl.book.author" class='form-control' placeholder="Author"></input>
            </div>

            <div class= 'col-md-4'>
              <input type="textarea" ng-model="reviewCtrl.book.review" class='form-control' placeholder="Review"></input>
            </div>
              
            <div class= 'col-md-1'>
              <button type="submit" class='btn btn-success'>Add Review</button>
            </div>

      </div>

    </form>
</div>





<!-- Show reviews from API -->
<div class='well'>
  
  <div ng-controller="DisplayBooksController as bookCtrl" >
    <h2> Book Reviews - JSON from Rails API </h2> 

    <div class='col-md-12'>
    <table class='table table-striped table-bordered'>
              <thead>
                <td> Star Rating </td>
                <td> Book Desc </td>
                <td> Reviewed By </td>
              </thead>

          <tbody ng-repeat="book in bookCtrl.books">
              <td>{{book.starRating}} </td>
              <td>{{book.desc}} </td>
              <td>{{book.reviewedBy}}</td>
          </tbody>
    </table>
  </div>


  <!-- Form -->
      <h2> Add a review - in back end </h2>

      <form ng-controller='AddReviewController as addrCtrl' ng-submit='addrCtrl.saveReview(book)'>

            <div class='row'> 
            
            <div class= 'col-md-2'>
              <select ng-model="addrCtrl.book.starRating" ng-options="starRating for starRating in [5,4,3,2,1]" class='form-control'>
                <option value="">Rate the Book</option>
              </select>
            </div>


              <div class= 'col-md-2'>
                <input type="text" ng-model="addrCtrl.book.desc" class='form-control' placeholder="Book Description"></input>
              </div>

              <div class= 'col-md-2'>
                <input type="text" ng-model="addrCtrl.book.reviewBy" class='form-control' placeholder="Reviewed by"></input>
              </div>
                      
              <div class= 'col-md-1'>
                <button type='submit' class= 'btn btn-success'> Add Review</button>
              </div>

              
            </div>
      </form>
  </div>

</div>





</div>



